{
  "name": "sls-ts-api-template",
  "version": "0.0.0",
  "description": "Template for a serverless REST API with TypeScript and DynamoDB",
  "main": "src/index.js",
  "scripts": {
    "build": "tsc",
    "deploy": "tsc && sls deploy",
    "dev:init": "sls dynamodb install",
    "dynamodb:start": "sls dynamodb start --stage local",
    "dynamodb:remove": "sls dynamodb remove --stage local",
    "format": "prettier --write './{,**/}*.[jt]s'",
    "start": "SLS_DEBUG=* AWS_REGION=us-west-2 NODE_ENV=LOCAL sls offline start --stage local",
    "start:debug": "AWS_REGION=us-west-2 NODE_ENV=LOCAL node --inspect=9220 ./node_modules/serverless/bin/serverless.js offline start --stage local",
    "logs:dev": "sls logs -f app -t --startTime 10m --stage dev"
  },
  "dependencies": {
    "core-js": "^3.11.2",
    "cors": "^2.8.5",
    "dotenv": "^9.0.2",
    "dynamodb": "^1.3.0",
    "dynamoose": "^2.7.3",
    "express": "^4.17.1",
    "express-winston": "^4.1.0",
    "moment": "^2.29.1",
    "serverless": "^2.39.0",
    "serverless-http": "^2.7.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "prettier": "^2.2.1",
    "serverless-dynamodb-local": "^0.2.39",
    "serverless-offline": "^7.0.0",
    "serverless-plugin-typescript": "^1.1.9",
    "typescript": "^4.2.4"
  },
  "author": "",
  "license": "MIT"
}
